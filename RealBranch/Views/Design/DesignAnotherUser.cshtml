
@using Model
@using System.Linq
@model IEnumerable<Note>

<link href=https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css rel=stylesheet crossorigin=anonymous integrity=sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u>
<link rel="stylesheet" type="text/css" href="https://web7b.com/demo/colorbox.css">
<style type="text/css">


    body {
        min-height: 52em;
        text-align: center;
        background-image: url('../Resource/jonathan-bean-TWehrrlPvBo-unsplash.jpg');
        position: center;
        background-size: 100% 100%;
    }

    .gallary-items img {
        width: 90%;
        margin: 1%;
        border-color: transparent;
        vertical-align: middle;
        transition: all 2s,transform .5s,box-shadow .5s;
    }

        .gallary-items img:hover {
            box-shadow: 6px 6px 20px #222;
        }

        .gallary-items img:focus {
            width: 110%;
            transform: none;
        }

    .row {
        margin-top: 8%;
    }
</style>

<section class="hinh-anh">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <h2><i class="fal fa-images"></i>@Resources.Content.Gallary</h2>
                <p>@Resources.Content.Ekibana</p>
            </div>
        </div>


        <!--Start row gallary-->
        <div class="row">

            <!--Row 1-->
            @foreach (var item in Model)
            {
                <div class="col-xs-6 col-sm-4 gallary-items">

                    @{

                        var base64 = Convert.ToBase64String(@item.Photo);
                        var imagesrc = string.Format("data:image/jpeg;base64,{0}", base64);

                        <img class="img" tabindex="6" src="@imagesrc" alt="" />


                    }
                    <div class="overlay"></div>

                </div>
            }


        </div>
    </div>
</section>

<section class="info"></section>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
<script src="https://web7b.com/demo/jquery.colorbox.js"></script>
<script type="text/javascript">
	   jQuery(document).ready(function () {
	            jQuery('a.gallery').colorbox({ opacity: 0.7, rel: 'group1' });
	});
</script>
