@model string
@{
    ViewBag.Title = "Создание роли";
}

<h2>Создать роль</h2>
@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
<div class="form-group">
    <label>@Resources.Content.Name</label>
    <input name="name" value="@Model" class="form-control" />
</div>
<button type="submit" class="btn btn-primary">@Resources.Content.Create</button>
    @Html.ActionLink(@Resources.Content.Back, "Index", null, new { @class = "btn btn-default" })
}